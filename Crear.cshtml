@model ProyectoInscripciones.Models.Inscripcion
@{
    ViewData["Title"] = "Nueva Inscripción";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-4">
    <h2 class="mb-3">Inscripción Nueva</h2>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-success">@ViewBag.Mensaje</div>
    }

    <form method="post" class="card p-4 shadow">
        <div class="mb-3">
            <label class="form-label">Nombre del Estudiante</label>
            <input asp-for="Nombre" class="form-control" />
            <span class="text-danger" asp-validation-for="Nombre"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Curso</label>
            <input asp-for="Curso" class="form-control" />
            <span class="text-danger" asp-validation-for="Curso"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Guardar</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>